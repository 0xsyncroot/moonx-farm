FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Metrics
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=moonx-farm
JAEGER_SAMPLING_RATE=0.1

# Health Checks
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_CHECK_TIMEOUT_MS=5000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Security Headers
HELMET_ENABLED=true
CSRF_PROTECTION_ENABLED=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development Mode
DEV_MODE=true
HOT_RELOAD=true
MOCK_EXTERNAL_APIS=false

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/moonx_farm_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_TIMEOUT_MS=30000

# Debug
DEBUG_SQL=false
DEBUG_REDIS=false
DEBUG_KAFKA=false

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================
# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
DOCKER_BUILD_TARGET=production

# Kubernetes
K8S_NAMESPACE=moonx-farm
K8S_CLUSTER_NAME=moonx-cluster
K8S_CONTEXT=moonx-context

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3006
NEXT_PUBLIC_APP_NAME=MoonX Farm DEX
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Wallet Connect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id
NEXT_PUBLIC_ENABLE_TESTNETS=true

