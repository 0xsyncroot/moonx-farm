# ----------------------------------------------
# Backend Services Configuration
# ----------------------------------------------
NEXT_PUBLIC_AUTH_API_URL: "https://api.moonx.farm/api/auth/v1"

# Aggregator Service API URL (for quotes and token search)
NEXT_PUBLIC_AGGREGATOR_API_URL: "https://api.moonx.farm/api/aggregator/v1"

# Core Service API URL (for trading history, portfolio, analytics)
NEXT_PUBLIC_CORE_API_URL: "https://api.moonx.farm/api/core/v1"

# ----------------------------------------------
# External APIs (Optional - using free tiers)
# ----------------------------------------------
# Note: DexScreener is used for price data and doesn't require API keys
# All external price/chart data is fetched through free public APIs

# ----------------------------------------------
# Development/Production Settings
# ----------------------------------------------
# Set to 'development' to enable Swagger/OpenAPI docs
