{
  "name": "@moonx-farm/sync-worker",
  "version": "1.0.0",
  "description": "MoonXFarm Sync Worker - High-performance portfolio sync service with horizontal scaling",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "build:production": "tsc --skipLibCheck --noEmit false",
    "build:clean": "rm -rf dist && pnpm run build:production",
    "start": "node dist/main.js",
    "start:cluster": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t moonx-farm/sync-worker .",
    "docker:run": "docker run -d --name sync-worker moonx-farm/sync-worker",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^12.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@fastify/redis": "^7.0.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.0.0",
    "@moonx-farm/common": "^1.0.6",
    "@moonx-farm/configs": "^1.0.3",
    "@moonx-farm/infrastructure": "^1.0.14",
    "axios": "^1.7.2",
    "bull": "^4.12.9",
    "bullmq": "^5.8.0",
    "date-fns": "^3.6.0",
    "fastify": "^5.0.0",
    "ioredis": "^5.4.1",
    "pg": "^8.11.3",
    "pino": "^9.1.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.6.13",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "moonx",
    "sync-worker",
    "portfolio",
    "worker",
    "scalable",
    "bullmq",
    "redis",
    "typescript"
  ]
} 