{
  "name": "@moonx-farm/websocket-service",
  "version": "1.0.0",
  "description": "High-performance WebSocket service for MoonX Farm Cross-chain DEX real-time data streaming",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "setup": "npm run build && npm run create-topics",
    "create-topics": "node scripts/create-kafka-topics.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:events": "npm run build && node scripts/test-events.js",
    "test:single-topic": "npm run test:events",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "websocket",
    "fastify",
    "real-time",
    "defi",
    "cross-chain",
    "moonx-farm"
  ],
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^8.3.1",
    "@moonx-farm/common": "1.0.6",
    "@moonx-farm/configs": "1.0.5",
    "@moonx-farm/infrastructure": "1.0.14",
    "@moonx-farm/shared": "^1.0.0",
    "axios": "^1.10.0",
    "eventemitter3": "^5.0.1",
    "fastify": "^4.24.3",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}