{
  "name": "@moonx-farm/notification-hub",
  "version": "1.0.0",
  "description": "MoonX Farm Notification Hub - Message Processing Engine for Split Architecture Phase 2",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:cluster": "pm2 start ecosystem.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:seed:production": "node scripts/seed-production.js",
    "kafka:setup-topics": "ts-node scripts/setup-kafka-topics.ts",
    "docker:build": "docker build -t moonx-farm/notification-hub .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:staging": "npm run build && npm run test && npm run deploy:docker:staging",
    "deploy:production": "npm run build && npm run test && npm run deploy:k8s:production",
    "health:check": "curl -f http://localhost:3008/health"
  },
  "keywords": [
    "notifications",
    "websocket",
    "kafka",
    "redis",
    "sendgrid",
    "telegram",
    "firebase",
    "push-notifications",
    "email",
    "real-time",
    "defi",
    "trading",
    "alerts",
    "moonx-farm"
  ],
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@moonx-farm/common": "1.0.6",
    "axios": "^1.6.0",
    "@moonx-farm/configs": "1.0.5",
    "@moonx-farm/infrastructure": "1.0.9",
    "@sendgrid/mail": "^7.7.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "firebase-admin": "^11.11.1",
    "grammy": "^1.37.0",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moonx-farm/notification-hub.git"
  },
  "author": "MoonX Farm Team",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}